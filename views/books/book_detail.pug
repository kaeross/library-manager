extends ../layout.pug

block content
    h1 Update Book
    form(action="/books/" + book.id + "?_method=PUT", method="post")
        p
            label(for="title") Title
            input(name="title" type="text" id="title" value=title)
        p
            label(for="author") Author
            input(name="author" type="text" id="author" value=author)
        p
            label(for="genre") Genre
            input(name="genre" type="text" id="genre" value=genre )
        p
            label(for="year") Year
            input(name="year" type="text" id="year" value=year)
        p
            input(type="submit" value="Update Book")
        p
            a.button(href="/") Cancel

    form(action="/books/" + book.id + "?_method=DELETE", method="post")
        p
            input(type="submit" value="Delete Book")