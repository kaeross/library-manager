extends ../layout.pug

block content
	.row.pb-3
		.container
			.col-md-2
				h1= pageTitle

			//- Hide search on search page and show back button
			if(!hideSearch)
				.col-md-2.jc-right
					include ../search
			else
				.col-md-2
					p
						a.button(href="/") Back
	form(action="/" method="POST")
		.row
			.container
				table.w-100
					thead 
						tr 
							th#title Title 
							th#author Author 
							th#genre Genre 
							th#year Year
					tbody
						each book in books
							tr
								td 
									a(href="books/" + book.id)= book.title
								td= book.author 
								td= book.genre
								td= book.year
		.row
			.container
				.pagination
						.left
							.button= "<"
						p 1
							input.d-none(value=)
						.right
							.button= ">"
	
	script(src="/js/tableSort.js")